FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY package.json ./

# Install dependencies
RUN pnpm install

# Copy source files (will be overridden by volume mount in dev)
COPY . .

EXPOSE 3000

CMD ["pnpm", "run", "dev", "--", "--host"]
